{
    "compilerOptions": {
        "outDir": "./build/",
        "sourceMap": true,
        "strict": true,
        "module": "es2015",
        "moduleResolution": "node",
        "target": "es5",
        "isolatedModules": false,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "removeComments": true,
        "suppressImplicitAnyIndexErrors": true,
        "allowSyntheticDefaultImports": true,
        "types": [
            "vue-typescript-import-dts"
        ],
        "lib": [
            "dom",
            "es2015",
            "es2015.promise"
        ]
    },
    "include": [
        "./src/**/*",
        "./src/*"
    ]
}